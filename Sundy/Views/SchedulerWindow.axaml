<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Sundy.ViewModels.Scheduler"
        xmlns:scheduler="using:Sundy.Controls.Scheduler"
        x:Class="Sundy.Views.SchedulerWindow"
        x:DataType="vm:SchedulerViewModel"
        Title="Select Time"
        Width="500"
        Height="700"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimary}">
    
    <Grid RowDefinitions="*,Auto">
        <!-- Scheduler View -->
        <scheduler:SchedulerView Grid.Row="0" 
                                 DataContext="{Binding}" />
        
        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundSecondary}" 
                Padding="16"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                <!-- Spacer -->
                <Panel Grid.Column="0" />
                
                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Width="100"
                        Height="36"
                        Background="{DynamicResource BackgroundTertiary}"
                        Foreground="{DynamicResource ForegroundPrimary}"
                        BorderThickness="0"
                        CornerRadius="6"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource BackgroundHover}" />
                        </Style>
                    </Button.Styles>
                </Button>
                
                <!-- Confirm Button -->
                <Button Grid.Column="2"
                        Content="Confirm"
                        Command="{Binding ConfirmCommand}"
                        Width="100"
                        Height="36"
                        Background="{DynamicResource AccentPrimary}"
                        Foreground="{DynamicResource ForegroundOnAccent}"
                        BorderThickness="0"
                        CornerRadius="6"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource AccentHover}" />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>

