<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sundy.ViewModels"
             xmlns:scheduler="using:Sundy.Controls.Scheduler"
             x:Class="Sundy.Views.CalendarView"
             x:DataType="vm:CalendarViewModel">

    <UserControl.Resources>
        <scheduler:SubtractConverter x:Key="SubtractConverter" Offset="12"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundPrimary}">
        <!-- Month View -->
        <Panel IsVisible="{Binding IsMonthView}">
            <Grid RowDefinitions="Auto,*">
                <!-- Day Headers -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*,*,*,*" Height="40">
                    <Border Grid.Column="0" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Sunday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Monday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="2" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Tuesday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="3" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Wednesday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="4" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Thursday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="5" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <TextBlock Text="Friday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                    <Border Grid.Column="6" Background="{DynamicResource BackgroundHover}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Saturday" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="SemiBold" Foreground="{DynamicResource ForegroundPrimary}" />
                    </Border>
                </Grid>

                <!-- Month Grid -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding MonthDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="6" Columns="7" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,1,1"
                                    Padding="5"
                                    DoubleTapped="OnDayDoubleTapped">
                                <Border.Styles>
                                    <!-- Default background for current month days -->
                                    <Style Selector="Border">
                                        <Setter Property="Background" Value="{DynamicResource BackgroundPrimary}" />
                                    </Style>
                                </Border.Styles>
                                <Grid RowDefinitions="Auto,*">
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Day}"
                                               FontSize="12"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,5,5">
                                        <TextBlock.Styles>
                                            <!-- Default text color for current month -->
                                            <Style Selector="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource ForegroundPrimary}" />
                                            </Style>
                                        </TextBlock.Styles>
                                    </TextBlock>

                                    <ListBox Grid.Row="1" ItemsSource="{Binding Events}"
                                             SelectedItem="{Binding SelectedEvent}"
                                             Background="Transparent"
                                             SelectionMode="Single">
                                        <ListBox.ItemContainerTheme>
                                            <ControlTheme TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0" />
                                                <Setter Property="Margin" Value="0,1" />
                                                <Setter Property="Template">
                                                    <ControlTemplate>
                                                        <Border x:Name="SelectionBorder"
                                                                CornerRadius="4"
                                                                BorderThickness="2"
                                                                BorderBrush="Transparent"
                                                                Padding="0">
                                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                                              ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter>

                                                <Style Selector="^:selected /template/ Border#SelectionBorder">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}" />
                                                </Style>
                                                <Style Selector="^:focus /template/ Border#SelectionBorder">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}" />
                                                </Style>
                                            </ControlTheme>
                                        </ListBox.ItemContainerTheme>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding CalendarColor}"
                                                        CornerRadius="3"
                                                        Padding="4,2"
                                                        DoubleTapped="OnEventDoubleTapped">
                                                    <TextBlock Text="{Binding Title}"
                                                               FontSize="11"
                                                               Foreground="White"
                                                               TextTrimming="CharacterEllipsis" />
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Panel>

        <!-- Week View -->
        <Panel IsVisible="{Binding IsWeekView}">
            <Grid RowDefinitions="Auto,*">
                <Grid Grid.Row="0" ColumnDefinitions="60,*">
                    <Border Grid.Column="0" Background="{DynamicResource BackgroundSecondary}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1"/>
                    <ItemsControl Grid.Column="1" ItemsSource="{Binding WeekDays}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundSecondary}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,1,1"
                                        Padding="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DayName}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource ForegroundMuted}" />
                                        <Border CornerRadius="20"
                                                Width="40" Height="40"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Center"
                                                Background="{Binding TodayBackground}">
                                            <TextBlock Text="{Binding Date}"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{Binding TodayForeground}" />
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Week Grid with Events -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid ColumnDefinitions="60,*" Height="1440">
                        <!-- Time Labels Column -->
                        <ItemsControl Grid.Column="0" ItemsSource="{Binding TimeSlots}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="60"
                                            Background="{DynamicResource BackgroundPrimary}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,1,0">
                                        <TextBlock Text="{Binding TimeLabel}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource ForegroundMuted}"
                                                   VerticalAlignment="Top"
                                                   Margin="5,-6,5,0" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 7-Day Grid with hour rows -->
                        <Grid Grid.Column="1" x:Name="WeekGridArea">
                            <!-- Background grid lines -->
                            <ItemsControl ItemsSource="{Binding TimeSlots}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="60" ColumnDefinitions="*,*,*,*,*,*,*">
                                            <Border Grid.Column="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="3" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="5" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1" Background="{DynamicResource BackgroundPrimary}"/>
                                            <Border Grid.Column="6" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Background="{DynamicResource BackgroundPrimary}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Events overlay using Canvas with ItemContainerStyle for positioning -->
                            <ItemsControl ItemsSource="{Binding VisibleEvents}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas x:Name="WeekEventsCanvas" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerTheme>
                                    <ControlTheme TargetType="ContentPresenter" x:DataType="vm:EventViewModel">
                                        <Setter Property="Canvas.Left" Value="{Binding CanvasLeft}" />
                                        <Setter Property="Canvas.Top" Value="{Binding CanvasTop}" />
                                    </ControlTheme>
                                </ItemsControl.ItemContainerTheme>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EventViewModel">
                                        <Border Background="{Binding CalendarColor}"
                                                CornerRadius="4"
                                                Padding="5"
                                                Width="{Binding CanvasWidth}"
                                                Height="{Binding CanvasHeight}"
                                                Cursor="Hand"
                                                Tapped="OnEventTapped"
                                                DoubleTapped="OnEventDoubleTapped"
                                                BorderBrush="{DynamicResource AccentPrimary}"
                                                BorderThickness="0"
                                                Classes.selected="{Binding IsSelected}">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Opacity" Value="0.8" />
                                                </Style>
                                                <Style Selector="Border.selected">
                                                    <Setter Property="BorderThickness" Value="3" />
                                                    <Setter Property="BoxShadow" Value="0 0 8 2 {DynamicResource AccentGlowColor}" />
                                                </Style>
                                            </Border.Styles>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}"
                                                           Foreground="White"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding TimeRange}"
                                                           Foreground="White"
                                                           FontSize="11"
                                                           Opacity="0.9" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Panel>

        <!-- Day View -->
        <Panel IsVisible="{Binding IsDayView}">
            <Grid RowDefinitions="Auto,*">
                <!-- Day Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource BackgroundSecondary}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SelectedDate, StringFormat=dddd}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundMuted}" />
                        <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:MMMM d\, yyyy}}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundPrimary}" />
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid ColumnDefinitions="60,*" Height="1440">
                        <!-- Time Labels -->
                        <ItemsControl Grid.Column="0" ItemsSource="{Binding TimeSlots}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="60"
                                            Background="{DynamicResource BackgroundPrimary}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,1,0">
                                        <TextBlock Text="{Binding TimeLabel}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource ForegroundMuted}"
                                                   VerticalAlignment="Top"
                                                   Margin="5,-6,5,0" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Day Column -->
                        <Grid Grid.Column="1">
                            <!-- Background time grid -->
                            <ItemsControl ItemsSource="{Binding TimeSlots}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Height="60"
                                                Background="{DynamicResource BackgroundPrimary}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="0,0,0,1" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Events overlay -->
                            <ItemsControl ItemsSource="{Binding VisibleEvents}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas x:Name="DayEventsCanvas" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerTheme>
                                    <ControlTheme TargetType="ContentPresenter" x:DataType="vm:EventViewModel">
                                        <Setter Property="Canvas.Top" Value="{Binding CanvasTop}" />
                                        <Setter Property="Canvas.Left" Value="{Binding CanvasLeft}" />
                                    </ControlTheme>
                                </ItemsControl.ItemContainerTheme>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EventViewModel">
                                        <Border Background="{Binding CalendarColor}"
                                                CornerRadius="4"
                                                Padding="8"
                                                Width="{Binding CanvasWidth}"
                                                Height="{Binding CanvasHeight}"
                                                Cursor="Hand"
                                                Tapped="OnEventTapped"
                                                DoubleTapped="OnEventDoubleTapped"
                                                BorderBrush="{DynamicResource AccentPrimary}"
                                                BorderThickness="0"
                                                Classes.selected="{Binding IsSelected}">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Opacity" Value="0.8" />
                                                </Style>
                                                <Style Selector="Border.selected">
                                                    <Setter Property="BorderThickness" Value="3" />
                                                    <Setter Property="BoxShadow" Value="0 0 8 2 {DynamicResource AccentGlowColor}" />
                                                </Style>
                                            </Border.Styles>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}"
                                                           Foreground="White"
                                                           FontWeight="SemiBold"
                                                           FontSize="14" />
                                                <TextBlock Text="{Binding TimeRange}"
                                                           Foreground="White"
                                                           FontSize="12"
                                                           Opacity="0.9"
                                                           Margin="0,2,0,0" />
                                                <TextBlock Text="{Binding Location}"
                                                           Foreground="White"
                                                           FontSize="11"
                                                           Opacity="0.8"
                                                           Margin="0,4,0,0"
                                                           IsVisible="{Binding HasLocation}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Panel>
    </Grid>
</UserControl>
