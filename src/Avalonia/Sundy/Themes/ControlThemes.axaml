<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== OVERRIDES FOR SIMPLETHEME ==================== -->
    <!-- SimpleTheme provides all the control templates. We just override colors and styling. -->

    <!--  ==================== BUTTON ==================== -->
    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource BackgroundPrimary}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundSecondary}" />
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundPressed}" />
    </Style>


    <!-- ==================== TEXTBOX ==================== -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushHover}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="SelectionBrush" Value="{DynamicResource AccentPrimary}" />
        <Setter Property="SelectionForegroundBrush" Value="{DynamicResource ForegroundOnAccent}" />
        <Setter Property="CaretBrush" Value="{DynamicResource ForegroundPrimary}" />
    </Style>

    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushFocus}" />
    </Style>

    <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundDisabled}" />
    </Style>


    <!-- ==================== CHECKBOX ==================== -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
    </Style>

    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource AccentPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}" />
    </Style>


    <!-- ==================== SCROLLBAR ==================== -->
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="{DynamicResource BackgroundSecondary}" />
    </Style>

    <Style Selector="ScrollBar:vertical">
        <Setter Property="MinWidth" Value="10" />
    </Style>

    <Style Selector="ScrollBar:horizontal">
        <Setter Property="MinHeight" Value="10" />
    </Style>

    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{DynamicResource BorderBrushHover}" />
    </Style>

    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{DynamicResource ForegroundMuted}" />
    </Style>


    <!-- ==================== LISTBOX ==================== -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundHover}" />
    </Style>

    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundSecondary}" />
    </Style>


    <!-- ==================== RADIOBUTTON ==================== -->
    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
    </Style>

    <Style Selector="RadioButton:checked /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource AccentPrimary}" />
    </Style>

    <Style Selector="RadioButton:checked /template/ Ellipse#InnerEllipse">
        <Setter Property="Fill" Value="{DynamicResource AccentPrimary}" />
    </Style>


    <!-- ==================== DATEPICKER ==================== -->
    <Style Selector="DatePicker">
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushHover}" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style Selector="DatePicker:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushFocus}" />
    </Style>


    <!-- ==================== COMBOBOX ==================== -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushHover}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundHover}" />
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource BackgroundSecondary}" />
    </Style>

</Styles>
