<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scheduler="using:Sundy.Controls.Scheduler">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource BackgroundPrimary}" Width="300" Height="50">
            <scheduler:CurrentTimeIndicator IndicatorBrush="{DynamicResource AccentPrimary}"/>
        </Border>
    </Design.PreviewWith>

    <Style Selector="scheduler|CurrentTimeIndicator">
        <Setter Property="IndicatorBrush" Value="{DynamicResource AccentPrimary}"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,*">
                    <!-- Time label -->
                    <TextBlock Grid.Column="0"
                               Text="{TemplateBinding TimeLabel}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{TemplateBinding IndicatorBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    
                    <!-- Line with dot -->
                    <Grid Grid.Column="1" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8"
                                 Fill="{TemplateBinding IndicatorBrush}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"/>
                        <Rectangle Height="2"
                                   Fill="{TemplateBinding IndicatorBrush}"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>