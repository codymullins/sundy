<Application x:Class="Sundy.Uno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Load Uno.UI.Toolkit resources -->
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
        <ResourceDictionary Source="ms-appx:///Presentation/Styles/Colors.xaml" />
        <ResourceDictionary Source="ms-appx:///Presentation/Styles/Controls.xaml" />
        <ResourceDictionary Source="ms-appx:///Presentation/Controls/SegmentedControl.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Add resources here -->

    </ResourceDictionary>
  </Application.Resources>

</Application>
