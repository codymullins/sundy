<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Background Colors -->
  <Color x:Key="BackgroundPrimaryColor">#141414</Color>
  <Color x:Key="BackgroundSecondaryColor">#1A1A1A</Color>
  <Color x:Key="BackgroundTertiaryColor">#1A1A1A</Color>
  <Color x:Key="BackgroundHoverColor">#242424</Color>
  <Color x:Key="BackgroundPressedColor">#1E1E1E</Color>

  <SolidColorBrush x:Key="BackgroundPrimary" Color="{StaticResource BackgroundPrimaryColor}" />
  <SolidColorBrush x:Key="BackgroundSecondary" Color="{StaticResource BackgroundSecondaryColor}" />
  <SolidColorBrush x:Key="BackgroundTertiary" Color="{StaticResource BackgroundTertiaryColor}" />
  <SolidColorBrush x:Key="BackgroundHover" Color="{StaticResource BackgroundHoverColor}" />
  <SolidColorBrush x:Key="BackgroundPressed" Color="{StaticResource BackgroundPressedColor}" />

  <!-- Foreground Colors -->
  <Color x:Key="ForegroundPrimaryColor">#E8E8E8</Color>
  <Color x:Key="ForegroundSecondaryColor">#CDCDCD</Color>
  <Color x:Key="ForegroundMutedColor">#9E9E9E</Color>
  <Color x:Key="ForegroundDisabledColor">#4A4A4A</Color>
  <Color x:Key="ForegroundOnAccentColor">#FFFFFF</Color>

  <SolidColorBrush x:Key="ForegroundPrimary" Color="{StaticResource ForegroundPrimaryColor}" />
  <SolidColorBrush x:Key="ForegroundSecondary" Color="{StaticResource ForegroundSecondaryColor}" />
  <SolidColorBrush x:Key="ForegroundMuted" Color="{StaticResource ForegroundMutedColor}" />
  <SolidColorBrush x:Key="ForegroundDisabled" Color="{StaticResource ForegroundDisabledColor}" />
  <SolidColorBrush x:Key="ForegroundOnAccent" Color="{StaticResource ForegroundOnAccentColor}" />

  <!-- Border Colors -->
  <Color x:Key="BorderBrushColor">#2A2A2A</Color>
  <Color x:Key="BorderBrushFocusColor">#7C3AED</Color>
  <Color x:Key="BorderBrushHoverColor">#3D3D3D</Color>

  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderBrushColor}" />
  <SolidColorBrush x:Key="BorderBrushFocus" Color="{StaticResource BorderBrushFocusColor}" />
  <SolidColorBrush x:Key="BorderBrushHover" Color="{StaticResource BorderBrushHoverColor}" />

  <!-- Accent Colors -->
  <Color x:Key="AccentPrimaryColor">#4F2991</Color>
  <Color x:Key="AccentHoverColor">#8B5CF6</Color>
  <Color x:Key="AccentPressedColor">#6D28D9</Color>
  <Color x:Key="AccentGlowColor">#4D7C3AED</Color>
  <Color x:Key="AccentSubtleColor">#337C3AED</Color>

  <SolidColorBrush x:Key="AccentPrimary" Color="{StaticResource AccentPrimaryColor}" />
  <SolidColorBrush x:Key="AccentHover" Color="{StaticResource AccentHoverColor}" />
  <SolidColorBrush x:Key="AccentPressed" Color="{StaticResource AccentPressedColor}" />
  <SolidColorBrush x:Key="AccentGlow" Color="{StaticResource AccentGlowColor}" />
  <SolidColorBrush x:Key="AccentSubtle" Color="{StaticResource AccentSubtleColor}" />

  <!-- Danger/Error Colors -->
  <Color x:Key="DangerPrimaryColor">#FF3B58</Color>
  <Color x:Key="DangerBackgroundColor">#1A0505</Color>
  <Color x:Key="DangerHoverColor">#2D0A0A</Color>

  <SolidColorBrush x:Key="DangerPrimary" Color="{StaticResource DangerPrimaryColor}" />
  <SolidColorBrush x:Key="DangerBackground" Color="{StaticResource DangerBackgroundColor}" />
  <SolidColorBrush x:Key="DangerHover" Color="{StaticResource DangerHoverColor}" />

  <!-- Modal/Dialog -->
  <Color x:Key="ModalOverlayColor">#B3001820</Color>
  <Color x:Key="ModalBackgroundColor">#2A2A2A</Color>
  <Color x:Key="ModalBorderColor">#4F2991</Color>

  <SolidColorBrush x:Key="ModalOverlay" Color="{StaticResource ModalOverlayColor}" />
  <SolidColorBrush x:Key="ModalBackground" Color="{StaticResource ModalBackgroundColor}" />
  <SolidColorBrush x:Key="ModalBorder" Color="{StaticResource ModalBorderColor}" />

  <!-- Scheduler -->
  <Color x:Key="SchedulerTimeTextColor">#6B6B6B</Color>
  <Color x:Key="SchedulerLineColor">#1F1F1F</Color>

  <SolidColorBrush x:Key="SchedulerTimeText" Color="{StaticResource SchedulerTimeTextColor}" />
  <SolidColorBrush x:Key="SchedulerLine" Color="{StaticResource SchedulerLineColor}" />

</ResourceDictionary>
