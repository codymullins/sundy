<Page
    x:Class="Sundy.Uno.Presentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sundy.Uno.ViewModels"
    xmlns:controls="using:Sundy.Uno.Presentation.Controls"
    xmlns:conv="using:Sundy.Uno.Presentation.Converters"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundPrimary}">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <conv:StringToBrushConverter x:Key="ColorConverter" />
        <conv:IndexEqualsConverter x:Key="IndexEqualsConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundSecondary}"
                Padding="16,12"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="0">
                    <Button Content="Today"
                            Command="{Binding GoToTodayCommand}"
                            Style="{StaticResource ModernButtonStyle}" />
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Command="{Binding PreviousPeriodCommand}"
                                Width="40"
                                Style="{StaticResource ModernButtonStyle}">
                            <SymbolIcon Symbol="Previous" Foreground="{StaticResource ForegroundPrimary}" />
                        </Button>
                        <Button Command="{Binding NextPeriodCommand}"
                                Width="40"
                                Style="{StaticResource ModernButtonStyle}">
                            <SymbolIcon Symbol="Next" Foreground="{StaticResource ForegroundPrimary}" />
                        </Button>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentPeriodDisplay}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundPrimary}" />
                </StackPanel>

                <controls:SegmentedControl Grid.Column="1"
                                           SelectedIndex="{Binding ViewModeIndex, Mode=TwoWay}"
                                           VerticalAlignment="Center">
                    <x:String>Day</x:String>
                    <x:String>Week</x:String>
                    <x:String>Month</x:String>
                </controls:SegmentedControl>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource ModernButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <SymbolIcon Symbol="Setting" Foreground="{StaticResource ForegroundPrimary}" />
                            <TextBlock Text="Settings" Foreground="{StaticResource ForegroundPrimary}" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding CreateEventCommand}"
                            Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <SymbolIcon Symbol="Add" Foreground="{StaticResource ForegroundOnAccent}" />
                            <TextBlock Text="New Event" Foreground="{StaticResource ForegroundOnAccent}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1" ColumnDefinitions="280,*">
            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Padding="16"
                    Background="{StaticResource BackgroundTertiary}"
                    BorderBrush="{StaticResource AccentSubtle}"
                    BorderThickness="0,0,1,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="My Calendars"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundPrimary}" />
                    <ItemsControl ItemsSource="{Binding Calendars}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:CalendarListItemViewModel">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="12" Height="12"
                                             Fill="{Binding Color, Converter={StaticResource ColorConverter}}" />
                                    <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay}">
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource ForegroundPrimary}" />
                                    </CheckBox>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="New Local Calendar"
                            Command="{Binding CreateNewCalendarCommand}"
                            Style="{StaticResource LinkButtonStyle}"
                            Visibility="{Binding HasNoCalendars, Converter={StaticResource BoolToVisibility}}" />
                </StackPanel>
            </Border>

            <!-- Calendar view -->
            <Border Grid.Column="1"
                    Background="{StaticResource BackgroundPrimary}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <controls:CalendarView DataContext="{Binding CalendarViewModel}" />
            </Border>
        </Grid>

        <!-- Event dialog overlay -->
        <Grid Background="{StaticResource ModalOverlay}"
              Visibility="{Binding IsEventDialogOpen, Converter={StaticResource BoolToVisibility}}"
              Grid.RowSpan="2">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="640" MaxHeight="700">
                <Border Background="{StaticResource ModalBackground}"
                        CornerRadius="12"
                        Padding="24"
                        BorderBrush="{StaticResource ModalBorder}"
                        BorderThickness="1">
                    <controls:EventEditControl DataContext="{Binding EventEditViewModel}" />
                </Border>
            </Grid>
        </Grid>

        <!-- Settings dialog overlay -->
        <Grid Background="{StaticResource ModalOverlay}"
              Visibility="{Binding IsSettingsDialogOpen, Converter={StaticResource BoolToVisibility}}"
              Grid.RowSpan="2">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="720" MaxHeight="720">
                <Border Background="{StaticResource ModalBackground}"
                        CornerRadius="12"
                        Padding="24"
                        BorderBrush="{StaticResource ModalBorder}"
                        BorderThickness="1">
                    <controls:CalendarSettingsControl DataContext="{Binding CalendarSettingsViewModel}" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
