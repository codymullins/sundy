<UserControl
    x:Class="Sundy.Uno.Presentation.Controls.CalendarSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Sundy.Uno.ViewModels"
    xmlns:conv="using:Sundy.Uno.Presentation.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="700">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <conv:StringToBrushConverter x:Key="ColorConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0"
                   Text="Calendar Settings"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource ForegroundPrimary}"
                   Margin="0,0,0,16" />

        <Grid Grid.Row="1" RowDefinitions="*,Auto,Auto" RowSpacing="16">
            <ScrollViewer Grid.Row="0">
                <StackPanel Spacing="10">
                    <TextBlock Text="Calendars" FontWeight="SemiBold" Foreground="{StaticResource ForegroundPrimary}" />
                    <ItemsControl ItemsSource="{Binding Calendars}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:CalendarItemViewModel">
                                <Border BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                        <Ellipse Grid.Column="0" Width="18" Height="18"
                                                 Fill="{Binding Color, Converter={StaticResource ColorConverter}}" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundPrimary}" />
                                        <Button Grid.Column="2"
                                                Content="Delete"
                                                Command="{Binding RequestDeleteCalendarCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="1" Spacing="8">
                <TextBlock Text="Create new calendar" FontWeight="SemiBold" Foreground="{StaticResource ForegroundPrimary}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox Text="{Binding NewCalendarName, Mode=TwoWay}" Width="240" PlaceholderText="Calendar name" />
                    <Button Content="Create"
                            Command="{Binding CreateCalendarCommand}"
                            Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Spacing="8">
                <TextBlock Text="Database management" FontWeight="SemiBold" Foreground="{StaticResource ForegroundPrimary}" />
                <TextBlock Text="Resetting clears all calendars and events."
                           Foreground="{StaticResource DangerPrimary}" />
                <Button Content="Reset database"
                        Command="{Binding ResetDatabaseCommand}"
                        Style="{StaticResource DangerButtonStyle}" />
                <Button Content="Close"
                        HorizontalAlignment="Right"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource ModernButtonStyle}" />
            </StackPanel>
        </Grid>

        <!-- Delete confirmation -->
        <Grid Grid.RowSpan="2"
              Background="{StaticResource ModalOverlay}"
              Visibility="{Binding IsDeleteConfirmationOpen, Converter={StaticResource BoolToVisibility}}">
            <Border Background="{StaticResource ModalBackground}"
                    Padding="20"
                    CornerRadius="8"
                    Width="360"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="12">
                    <TextBlock Text="Delete calendar?"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundPrimary}" />
                    <TextBlock Text="This will remove the calendar and all of its events."
                               TextWrapping="Wrap"
                               Foreground="{StaticResource ForegroundPrimary}" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Cancel" Command="{Binding CancelDeleteCommand}" Style="{StaticResource ModernButtonStyle}" />
                        <Button Content="Delete" Command="{Binding ConfirmDeleteCommand}" Style="{StaticResource DangerButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Reset confirmation -->
        <Grid Grid.RowSpan="2"
              Background="{StaticResource ModalOverlay}"
              Visibility="{Binding IsResetConfirmationOpen, Converter={StaticResource BoolToVisibility}}">
            <Border Background="{StaticResource ModalBackground}"
                    Padding="20"
                    CornerRadius="8"
                    Width="380"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Spacing="12">
                    <TextBlock Text="Reset database?"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundPrimary}" />
                    <TextBlock Text="All calendars and events will be removed permanently."
                               TextWrapping="Wrap"
                               Foreground="{StaticResource ForegroundPrimary}" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Cancel" Command="{Binding CancelResetCommand}" Style="{StaticResource ModernButtonStyle}" />
                        <Button Content="Reset" Command="{Binding ConfirmResetCommand}" Style="{StaticResource DangerButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
