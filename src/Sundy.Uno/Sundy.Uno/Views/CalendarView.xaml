<UserControl x:Class="Sundy.Uno.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sundy.Uno.ViewModels"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch">

    <Grid Background="{ThemeResource BackgroundPrimary}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Month View -->
        <Grid x:Name="MonthViewGrid"
              Visibility="{x:Bind ViewModel.IsMonthView, Mode=OneWay}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Day Headers -->
            <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Sun" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Mon" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Tue" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Wed" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="4" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Thu" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="5" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,1,1">
                <TextBlock Text="Fri" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="6" Background="{ThemeResource BackgroundHover}"
                    BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                <TextBlock Text="Sat" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="SemiBold" Foreground="{ThemeResource ForegroundPrimary}" />
            </Border>

            <!-- Month Grid - 42 day cells built in code-behind -->
            <Grid x:Name="MonthDaysContainer"
                  Grid.Row="1" Grid.RowSpan="6" Grid.ColumnSpan="7"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>
        </Grid>

        <!-- Week View Placeholder -->
        <Grid x:Name="WeekViewGrid" Visibility="{x:Bind ViewModel.IsWeekView, Mode=OneWay}">
            <TextBlock Text="Week View - Implementation Pending"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="{ThemeResource ForegroundMuted}" />
        </Grid>

        <!-- Day View Placeholder -->
        <Grid x:Name="DayViewGrid" Visibility="{x:Bind ViewModel.IsDayView, Mode=OneWay}">
            <TextBlock Text="Day View - Implementation Pending"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="{ThemeResource ForegroundMuted}" />
        </Grid>
    </Grid>
</UserControl>
