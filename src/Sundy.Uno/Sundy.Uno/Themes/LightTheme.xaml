<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimaryColor">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondaryColor">#F8F8F8</Color>
    <Color x:Key="BackgroundTertiaryColor">#F0F0F0</Color>
    <Color x:Key="BackgroundHoverColor">#EBEBEB</Color>
    <Color x:Key="BackgroundPressedColor">#E0E0E0</Color>

    <SolidColorBrush x:Key="BackgroundPrimary" Color="{StaticResource BackgroundPrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="{StaticResource BackgroundSecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="{StaticResource BackgroundTertiaryColor}"/>
    <SolidColorBrush x:Key="BackgroundHover" Color="{StaticResource BackgroundHoverColor}"/>
    <SolidColorBrush x:Key="BackgroundPressed" Color="{StaticResource BackgroundPressedColor}"/>

    <!-- Foreground Colors -->
    <Color x:Key="ForegroundPrimaryColor">#000000</Color>
    <Color x:Key="ForegroundSecondaryColor">#1A1A1A</Color>
    <Color x:Key="ForegroundMutedColor">#5C5C5C</Color>
    <Color x:Key="ForegroundDisabledColor">#B0B0B0</Color>
    <Color x:Key="ForegroundOnAccentColor">#000000</Color>

    <SolidColorBrush x:Key="ForegroundPrimary" Color="{StaticResource ForegroundPrimaryColor}"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="{StaticResource ForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="ForegroundMuted" Color="{StaticResource ForegroundMutedColor}"/>
    <SolidColorBrush x:Key="ForegroundDisabled" Color="{StaticResource ForegroundDisabledColor}"/>
    <SolidColorBrush x:Key="ForegroundOnAccent" Color="{StaticResource ForegroundOnAccentColor}"/>

    <!-- Border Colors -->
    <Color x:Key="BorderBrushColor">#D4D4D4</Color>
    <Color x:Key="BorderBrushFocusColor">#6366F1</Color>
    <Color x:Key="BorderBrushHoverColor">#B8B8B8</Color>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderBrushColor}"/>
    <SolidColorBrush x:Key="BorderBrushFocus" Color="{StaticResource BorderBrushFocusColor}"/>
    <SolidColorBrush x:Key="BorderBrushHover" Color="{StaticResource BorderBrushHoverColor}"/>

    <!-- Accent Colors -->
    <Color x:Key="AccentPrimaryColor">#6366F1</Color>
    <Color x:Key="AccentHoverColor">#818CF8</Color>
    <Color x:Key="AccentPressedColor">#4F46E5</Color>
    <Color x:Key="AccentGlowColor">#4D6366F1</Color>
    <Color x:Key="AccentSubtleColor">#336366F1</Color>

    <SolidColorBrush x:Key="AccentPrimary" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentHover" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressed" Color="{StaticResource AccentPressedColor}"/>
    <SolidColorBrush x:Key="AccentGlow" Color="{StaticResource AccentGlowColor}"/>
    <SolidColorBrush x:Key="AccentSubtle" Color="{StaticResource AccentSubtleColor}"/>

    <!-- Accent Background for Selected States -->
    <Color x:Key="AccentBackgroundColor">#E8E4F3</Color>
    <SolidColorBrush x:Key="AccentBackground" Color="{StaticResource AccentBackgroundColor}"/>

    <!-- Danger/Error Colors -->
    <Color x:Key="DangerPrimaryColor">#E0204A</Color>
    <Color x:Key="DangerBackgroundColor">#FFF0F2</Color>
    <Color x:Key="DangerHoverColor">#FFE5E9</Color>

    <SolidColorBrush x:Key="DangerPrimary" Color="{StaticResource DangerPrimaryColor}"/>
    <SolidColorBrush x:Key="DangerBackground" Color="{StaticResource DangerBackgroundColor}"/>
    <SolidColorBrush x:Key="DangerHover" Color="{StaticResource DangerHoverColor}"/>

    <!-- Warning Colors -->
    <Color x:Key="WarningBackgroundColor">#FFF8E5</Color>
    <Color x:Key="WarningBorderColor">#E69500</Color>

    <SolidColorBrush x:Key="WarningBackground" Color="{StaticResource WarningBackgroundColor}"/>
    <SolidColorBrush x:Key="WarningBorder" Color="{StaticResource WarningBorderColor}"/>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#26000000</Color>
    <Color x:Key="ShadowLightColor">#1A000000</Color>

    <!-- Modal/Dialog Colors -->
    <Color x:Key="ModalOverlayColor">#80606060</Color>
    <Color x:Key="ModalBackgroundColor">#F5F5F5</Color>
    <Color x:Key="ModalBorderColor">#6366F1</Color>

    <SolidColorBrush x:Key="ModalOverlay" Color="{StaticResource ModalOverlayColor}"/>
    <SolidColorBrush x:Key="ModalBackground" Color="{StaticResource ModalBackgroundColor}"/>
    <SolidColorBrush x:Key="ModalBorder" Color="{StaticResource ModalBorderColor}"/>
    <SolidColorBrush x:Key="ContentDialogLightDismissOverlayBackground"
                     Color="{StaticResource AccentPrimaryColor}"
                     Opacity="0.35"/>
    <SolidColorBrush x:Key="SystemControlPageBackgroundMediumAltMediumBrush"
                     Color="{StaticResource AccentPrimaryColor}"
                     Opacity="0.35"/>

    <!-- Scheduler Specific -->
    <Color x:Key="SchedulerTimeTextColor">#757575</Color>
    <Color x:Key="SchedulerLineColor">#E0E0E0</Color>

    <SolidColorBrush x:Key="SchedulerTimeText" Color="{StaticResource SchedulerTimeTextColor}"/>
    <SolidColorBrush x:Key="SchedulerLine" Color="{StaticResource SchedulerLineColor}"/>

    <!-- Time Block Colors -->
    <Color x:Key="TimeBlockHandleColor">#000000</Color>
    <Color x:Key="TimeBlockBrushColor">#CC6366F1</Color>

    <SolidColorBrush x:Key="TimeBlockHandle" Color="{StaticResource TimeBlockHandleColor}"/>
    <SolidColorBrush x:Key="TimeBlockBrush" Color="{StaticResource TimeBlockBrushColor}"/>

</ResourceDictionary>
